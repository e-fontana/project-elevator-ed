`include "frequency.v"

module frequency_tb;
    reg clk_50, led1, led2, led3, moving;
    wire clk;

    parameter clk_frequency = 500;
    frequency #(clk_frequency) FREQUENCY(clk_50, led1, led2, led3, moving, clk);

    always #1 clk_50 <= ~clk_50;

	always @(posedge clk) begin
		$strobe("time: %d, clk: %b", $time, clk);
	end

    initial begin
        clk_50 = 0;
        clk = 0;
        $monitor("clk: %b, leds: %b%b%b, time: %d", clk, led1, led2, led3, $time);
        #10 led2 = 1;
        #(clk_frequency * 10) $finish;
    end
endmodule